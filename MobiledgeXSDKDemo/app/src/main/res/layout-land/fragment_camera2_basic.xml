<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context=".com.mobiledgex.sdkdemo.camera.CameraActivity">

    <com.mobiledgex.sdkdemo.com.mobiledgex.sdkdemo.camera.AutoFitTextureView
        android:id="@+id/textureView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <com.mobiledgex.sdkdemo.com.mobiledgex.sdkdemo.camera.BoundingBox
        android:id="@+id/cloudBB"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" />

    <com.mobiledgex.sdkdemo.com.mobiledgex.sdkdemo.camera.BoundingBox
        android:id="@+id/edgeBB"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/cloud_latency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cloud Latency"
            android:textColor="@android:color/white"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/cloud_std_dev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cloud STDDEV"
            android:textColor="@android:color/white"
            android:layout_alignParentTop="true"
            android:paddingTop="40dp"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/edge_latency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:paddingTop="80dp"
            android:text="Edge Latency"
            android:textColor="@android:color/white"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/edge_std_dev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edge STDDEV"
            android:textColor="@android:color/white"
            android:layout_alignParentTop="true"
            android:paddingTop="120dp"
            android:textSize="28sp" />
    </RelativeLayout>


</FrameLayout>
